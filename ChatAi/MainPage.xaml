<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatAi.MainPage">

    <StackLayout BackgroundColor="#E3F2F1" Padding="20">
        <Label Text="Добро пожаловать в ChatAi"
               FontSize="Medium"
               TextColor="Black"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />

        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
            <Button Text="Начать чат"
                    Clicked="OnChatButtonClicked"
                    HorizontalOptions="FillAndExpand"
                    />
            <Button Text="Переводчик"
                    Clicked="OnTranslatorButtonClicked"
                    HorizontalOptions="FillAndExpand"/>
            <Button Text="Профиль"
                    Clicked="OnProfileButtonClicked"
                    HorizontalOptions="FillAndExpand"/>
        </StackLayout>
    </StackLayout>
</ContentPage>